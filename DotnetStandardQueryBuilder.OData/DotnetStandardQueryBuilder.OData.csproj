<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>9.0</LangVersion>
    <Authors>Nikhil Sarvaiye</Authors>
    <Description>DotnetStandardQueryBuilder.OData package contains methods to build query request from http request query string</Description>
    <Copyright>Nikhil Sarvaiye - Personal</Copyright>
    <PackageProjectUrl>https://github.com/nikhilsarvaiye/DotnetStandardQueryBuilder</PackageProjectUrl>
    <RepositoryUrl>https://github.com/nikhilsarvaiye/DotnetStandardQueryBuilder</RepositoryUrl>
    <PackageTags>querybuilder,odata,aspnetcore,webapi,query,mongo,mongodb,sql,filter,dynamic,dotnet,standard</PackageTags>
    <RepositoryType>Github</RepositoryType>
    <PackageReleaseNotes>A OData compliant QueyBuilder for net and aspnet core application for different MondoDB, SQL, Azure Cosmos Db databases</PackageReleaseNotes>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageId>DotnetStandardQueryBuilder.OData</PackageId>
    <Product>DotnetStandardQueryBuilder.OData</Product>
    <AssemblyName>DotnetStandardQueryBuilder.OData</AssemblyName>
    <Version>1.0.2</Version>
    <RootNamespace>DotnetStandardQueryBuilder.OData</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.OData.Core" Version="7.8.3" />
    <PackageReference Include="Microsoft.AspNetCore.OData" Version="7.5.5" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\DotnetStandardQueryBuilder.Core\DotnetStandardQueryBuilder.Core.csproj" />
  </ItemGroup>

</Project>
