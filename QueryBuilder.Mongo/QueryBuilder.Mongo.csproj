<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>9.0</LangVersion>
    <Description>DotnetStandardQueryBuilder.Mongo package contains methods to build Mongo database query from query builder request</Description>
    <Copyright>Nikhil Sarvaiye - Personal</Copyright>
    <PackageProjectUrl>https://github.com/nikhilsarvaiye/QueryBuilder</PackageProjectUrl>
    <RepositoryUrl>https://github.com/nikhilsarvaiye/QueryBuilder</RepositoryUrl>
    <RepositoryType>Github</RepositoryType>
    <PackageTags>querybuilder,odata,aspnetcore,webapi,query,mongo,mongodb,sql,filter,dynamic,dotnet,standard</PackageTags>
    <PackageReleaseNotes>A OData compliant QueyBuilder for net and aspnet core application for different MondoDB, SQL, Azure Cosmos Db databases</PackageReleaseNotes>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageId>DotnetStandardQueryBuilder.Mongo</PackageId>
    <Product>DotnetStandardQueryBuilder.Mongo</Product>
    <Authors>DotnetStandardQueryBuilder.Mongo</Authors>
    <Company>DotnetStandardQueryBuilder.Mongo</Company>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\QueryBuilder.Core\QueryBuilder.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MongoDB.Bson" Version="2.11.6" />
    <PackageReference Include="MongoDB.Driver" Version="2.11.6" />
  </ItemGroup>
</Project>
